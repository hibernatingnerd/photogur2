<h1>Sign up!</h1>



<h4>New Account</h4>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>

  <div class="login">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div class="login">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div class="login">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit 'Sign Up' %>

<% end %>
