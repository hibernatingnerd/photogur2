
<hr>
<section>
  <div class="back_edit_delete">
    <p> <%= link_to("Back to Pictures", pictures_path) %>  | <%= link_to("Edit", "/pictures/#{@picture.id}/edit") %> <%= link_to("Delete", "/pictures/#{@picture.id}", method: :delete, data: {confirm: "Are you sure you want to delete this picture?"})  %> </p>
    <hr>
  </div>

<div class="first">
  <p><%=@picture.title%> </p>
  <p><i><%=@picture.artist%></i></p>
  <%= image_tag(@picture.url, :size => "500x500") %>
</div>

<div class= "comments">
  <hr>
    <h4>Comments: <%= @picture.comments.count %></h4>
    <% @picture.comments.each do |comment| %>
    <p>-<%=comment.message%> <i>-<%=comment.name%></i></p>
    <%=link_to("Delete comment", picture_comment_path(@picture.id, comment.id), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} )%>
    <% end %>
</div>

<div class="comments_form">
  <%=form_for [@picture, @comment] do |f| %>

  <p>
    <%= f.label :message %><br>
    <%= f.text_field :message %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
     <%= f.submit "Comment" %>
   </p>

    <%end%>
</div>
</section>


</section>
