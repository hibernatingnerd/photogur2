

<% if picture.errors.any? %>

    <ul>
    <% picture.errors.full_messages.each do |msg| %>
      <span class="error">*<%= msg %></span>
    <% end %>
    </ul>
<% end %>





<%=form_for picture do |f| %>

<p>
  <%= f.label :artist %><br>
  <%= f.text_field :artist %>
</p>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>


<p>
  <%= f.label :url %><br>
  <%= f.text_field :url %>
</p>

<p>
   <%= f.submit "Save" %>
 </p>

<% end %>
